%h1 Words
%p
%table.table
  %thead
    %tr
      %th
        \#
      %th
        Value
      %th
        Language
      %th
        Actions
  %tbody
    - @words.each do |word|
      %tr
        %td
          = word.id
        %td
          = word.value
        %td
          = word.language
        %td
          = link_to('Show', word_path(word), class: 'btn btn-primary')
